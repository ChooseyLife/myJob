.store_box{
	display: table;
	border-bottom:1px solid #ddd;
	height:1.2rem;
	width:100%;
}
.store_box p,.store_box a,.store_box>span{
	padding:0.2rem 0;
	display: table-cell;
	vertical-align: middle;
}
.store_box>span{
	width:1rem;
	vertical-align:middle;
	display: none;
	text-align: center;
	background: url(../images/check.png) no-repeat center;
	background-size:0.45rem;
}
.store_box p span{
	display: block;
	margin-bottom:0.2rem;
	margin-left:0.4rem;
	

}
.store_box p span:nth-child(1){
	font-size: 0.4rem;
	font-weight: bold;
}
.store_box a{
	width:1rem;
	vertical-align: middle;
	background: url(../images/description.png) no-repeat center;
	background-size:0.45rem;
}
.store_box p span i{
	background: #ddd;
	padding:0 0.2rem;
	border-radius: 0.2rem;
	color:#fff;
	font-size: 0.1rem;
	vertical-align: bottom;
	margin-left:0.2rem;
	font-weight: normal;
}
.before{
	background: #eee;
}