body{
	font-size:0.32rem;
}
.head2{
	background-color: #fafafa;
}
.mask{
	position: fixed;
	top:0;
	left:0;
	bottom:0;
	right:0;
	background-color: rgba(0,0,0,.8);
	z-index:2;
	display: none;
}
.nav{
	font-size:0;
	position: relative;
	z-index:3;
	background: #fff;

}
.nav div{
	position: relative;
	display: inline-block;
	font-size:0.19rem;
	width:50%;
	text-align: center;
	line-height: 0.8rem;
	border-bottom:1px solid #ebebeb;
}
.sort{
	border-right:1px solid #ebebeb;
}
.list_box{
	position: relative;
}
.star{
	color:orange;
}
.star .number{
	color:#000;
}
.list_box ul{
	border-top:1px solid #ebebeb;
	position: absolute;
	z-index:3;
	text-align: left;
	top:-1px;
	left:0;
	width:200%;
	background: #fff;
	display: none;
}
.list_box ul li{
	text-indent:0.4rem;
	line-height: 0.8rem;
	border-bottom: 1px solid #ebebeb;
}
.list_box ul li.on{
	background: url(../images/check2.png) no-repeat 9rem center;
	background-size: 0.4rem;
}
.present_box{
	height:1.87rem;
}

.present_box .head{
	display: inline-block;
	width:1.07rem;
	height:1.07rem;
	overflow: hidden;
	
	border-radius: 999px;
	vertical-align: middle;
	margin-left:0.4rem;
}
.present_box .head img{
	width: 100%;
	height: 100%;
	vertical-align: middle;
}
.present_box>a>div{
	vertical-align: middle;
	display: inline-block;
	width:8.6rem;
	
	border-bottom:1px solid #ebebeb;
	padding: 0.4rem 0 0.2rem 0.2rem;
	margin-left:-0.2rem;
}
.present_box .name{
	margin-bottom:0.2rem;
	font-size: 0.37rem;
	font-weight: bold;
}
.present_box .name>span{
	font-weight: normal;
	font-size: 0.32rem;
	border-left:1px solid #ebebeb;
	vertical-align: bottom;
	padding-left:0.2rem;
}
.present_box .number{
	float: right;
	margin-right: 0.4rem;

}