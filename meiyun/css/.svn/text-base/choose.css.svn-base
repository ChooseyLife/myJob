.head_box{
	vertical-align: middle;
	padding:0.4rem 0.2rem;
	background: #eee;
	font-size: 0;
}
.head_box input{
	width:8.4rem;
	height:0.8rem;
	line-height: 0.8rem;
	font-size: 0.42rem;
	outline: none;
	border:1px solid #999;
	border-radius:0.1rem; 
	vertical-align: middle;
	text-indent: 0.8rem;
	background: url(../images/choose.png) no-repeat 0.2rem center;
	background-size: 0.48rem;
	background-color:#ddd;
}
.head_box .close{
	display: inline-block;
	width:1.1rem;
	vertical-align: middle;
	text-align: right;
	
	font-size: 0.43rem;
}
.technician_list{
	padding:0.4rem 0 0 0.4rem;
	overflow: hidden;
}
.technician_list .head{
	float: left;
	width:2rem;
	height: 2rem;
	border-radius: 999px;
	overflow: hidden;
	padding:0;
}
.technician_list .head img{
	width:100%;
	height:100%;
}
.explain{
	border-bottom:1px  solid #ddd;
	height:2rem;
	margin-left:2rem;
	position: relative;
}
.level{
	position: absolute;
	bottom:0.2rem;
	left:0;
	right:0.4rem;
	color:orange;
}
.level span{
	float: right;
	color:#333;
}

.stylist{
	font-size: 0.48rem;
    font-weight: 600;
}
.aft{
	font-size: 0.15rem;
    vertical-align: super;
    border-left: 1px solid #ddd;
    padding-left: 0.1rem;
    margin-left: 0.1rem;
}