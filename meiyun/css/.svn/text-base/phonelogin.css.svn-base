.main{
	margin:0 auto;
	text-align: center;
}
.main h2{
	margin-bottom:2rem;
}
.name,.proving,.pwd,.auth-code-in{
	height: 1.5rem;
    text-indent: 0.5rem;
    vertical-align: super;
    font-size: 0.33rem;
    color: #999;
    
    border-style:solid;
    border-width:1px;
    border-color:transparent transparent #ddd transparent;
	outline: none;
	margin-bottom:0.8rem;
}
.name{
	width:75%;
	background: url(../images/phone.png) no-repeat left center ;
	background-size:0.31rem 0.48rem;
}
.proving{
	width:55%;
	background: url(../images/message.png) no-repeat left center ;
	background-size:0.48rem 0.33rem;
	background-color:#fff;
}

.pwd{
	width:75%;
	background: url(../images/lock.png) no-repeat left center ;
	background-size:0.48rem 0.33rem;
}

.forget{
	width: 75%;
	margin: 0 auto;
	text-align: right;
	color: #999;
	font-size: .2rem;
	margin-bottom: .5rem;
}

.warn{
	width:75%;
	margin:0 auto 1rem auto;
	color:#bbb;
	text-align:left;
}
.sumbit{
	width:6rem;
	display: block;
	margin:0 auto;
	background: rgb(42, 185, 202);
	border:0;
	outline: none;
	height:1rem;
	font-size:0.43rem;
	color:#fff;
	margin-bottom:1rem;
}
.other{
	color:rgb(42, 185, 202);
	font-size:0.3rem;
}
.othersbox{
	margin-top:4rem;
}
.support{
	width:6rem;
	border:1px solid #ddd;
	position: relative;
	margin: 0 auto;
	font-size:0.33rem;
}
.support:after{
	content:"µÚÈý·½ÕËºÅµÇÂ¼";
	color:#999;
	position: absolute;
	left:50%;
	top:0;
	padding:0.2rem;
	background:#fff;
	transform: translate(-50% ,-50%);
	-webkit-transform: translate(-50% ,-50%);
}
.othersbox ul{
	margin-top:1rem;
	font-size:0;
}
.othersbox li{
	display: inline-block;
	width:1.28rem;

}
.othersbox .wx a{
	display: inline-block;
	width:100%;
	padding-top:1.5rem;
	background: url(../images/wx.png) no-repeat top center;
	background-size:1.28rem; 
	font-size: 0.3rem;
	color:#333;
}
.auth-phone{
	padding:.5rem 0 .5rem .5rem;
	text-align: left;
	font-size:.4rem;
	background-color:#c0c0c0;
	color:#e9e9e9;
}
.auth-code{
	vertical-align: super;
	font-size:.35rem;
}
.auth-code-in{
	margin-bottom: 0;
	width:55%;
	background-size:0.48rem 0.33rem;
	background-color:#fff;
	border-bottom:0;
	font-size:.35rem;
}
.code-box{
	margin-bottom:.5rem;
	text-align: left;
	background-color:#fff;
	padding:.2rem;
}
.btn-auth{
	width: 30%;
	display: inline-block;
	text-align: right;
	font-size:.4rem;
	color: #1BB7AC;
}
.call{
	padding:.2rem;
	text-align: right;
	font-size:.3rem;
	color:rgb(11,108,185);
}

.auth-tit{
	padding:.2rem;
	text-align: left;
	background-color:#fff;
	color: #ccc;
	font-size:.3rem;
}
.set-brth{
	margin: .15rem;
	width: 98%;
	padding: .2rem;
	background: #ccc;
	color: #000000;
	text-indent: .5rem;
	border: 1px solid #ddd;
	border-radius: .15rem;
	background: url("../images/personImg/brih.png")no-repeat .1rem center;
	background-size: 0.5rem 0.5rem;
}