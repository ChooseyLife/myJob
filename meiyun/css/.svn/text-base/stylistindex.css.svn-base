.main{
	padding-bottom:0.98rem;
}
img{
	width: 100%;
	height: 100%;
}
.task_box{
	border-bottom:1px solid #ddd;
	overflow: hidden;
	width:100%;
}
.task_box li{
	float: left;
	width:33.3%;
	text-align: center;
	padding-top:1.5rem;
	padding-bottom:0.4rem;
	font-size:0.32rem;

}
.task_box li a{
	color:#999;
}
.task_box li:nth-child(2){
	border-left:1px solid #ddd;
	border-right:1px solid #ddd;
}
.title_box{
	
	overflow: hidden;
	width:100%;
	height: 0.8rem;
}
.title_box li{
	float: left;
	width:33.3%; 
	text-align: center;
	line-height: 0.8rem;
	color:#ddd;
}
/* .title_box li:nth-child(2){
	border-left:1px solid #ddd;
	border-right:1px solid #ddd;
} */
.title_box li.on{
	color:#f15063;
}
.schedule{
	background: url(../images/schedule.png) no-repeat center 0.4rem;
	background-size: 0.96rem;
}
.order{
	background: url(../images/order.png) no-repeat center 0.4rem;
	background-size: 0.96rem;
}
.evaluate{
	background: url(../images/evaluate.png) no-repeat center 0.4rem;
	background-size: 0.96rem;
}
.news_box{
	overflow: hidden;
	padding:0.2rem 0;
	width:100%;
	border-bottom:1px solid #ddd;
	padding-right:0.2rem;
}
.news_box .news_title{
	margin-right:3.5rem;
	height:3rem;
}
.news_title{
	padding:0.4rem;
}
.news_title h3{
	line-height: 0.6rem;
	height:1.78rem;
	overflow: hidden;
	font-size: 0.5rem;
	word-break:break-all;/*自动换行*/
	display:-webkit-box;/*盒子模型*/
	-webkit-line-clamp:3;/*行数*/
	-webkit-box-orient:vertical;/*超过部分用三个...显示*/
	overflow:hidden;/*超过隐藏*/
}
.news_title>span{
	color:#ddd;
	font-size:0.2rem;
}
.news_box>span{
	float: right;
	width:3rem;
	height:3rem;
	
}
.bottom_box{
	position: fixed;
	bottom:0;
	left:0;
	right:0;
	height:1rem;
	overflow: hidden;
	border-top:1px solid #ddd;
	background:rgba(255,255,255,0.9);
}
.bottom_box a{
	float: left;
	width:50%;
	line-height:1rem;
	text-align: center;
	border-left:1px solid #ddd;
	margin-left:-1px;
}