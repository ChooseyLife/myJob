.active{
    color:#ff9c05;
    border-bottom:.1rem solid #ff9c05;
}
.order-head ul{
    overflow: hidden;
    border-bottom:.02rem solid #cccccc;
    background:#fff;
}
.order-head li {
    width:25%;
    text-align: center;
    padding:.3rem 0;
    float: left;
}
.order-content{
    position: relative;
}
.order-content .no-order{
    position: absolute;
    top:50%;
    left:50%;
    margin-left:-2rem;
    margin-top:4rem;
}

.order-item{
    overflow:hidden;
    padding: .2rem;
    margin-top: .1rem;
    background-color:#fff;
}
.order-header{
    border-bottom:.02rem solid #ddd;
    overflow: hidden;
    padding: .1rem 0;
}
.order-mid{
    display: table;
    width:100%;
}
.order-foot{
    text-align: right;
    font-size: .4rem;
    padding-top: .2rem;
}
.goods-img,.goods-xq{
    display:table-cell;
}
.goods-img{
    padding:.1rem 0 .1rem;
    vertical-align: middle;
}
.goods-xq{
    padding:.1rem .1rem 0;
    color:#c0c0c0;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}
.order-type{
    padding-bottom:.2rem;
    color:#000;
}
.order-foot span{
    color:#ff9c05;
}
.f_left{
    float:left;
}
.f_right{
    float: right;
}