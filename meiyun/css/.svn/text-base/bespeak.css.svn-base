.main{
	margin-bottom:1.4rem;
}
.before.on{
	background: #eee;
	color:#999;
}
.phone_box{
	padding:0.4rem;
}
.phone_box li{
	margin-bottom:0.4rem;
}
.phone_box p{
	margin-left:2rem;
	margin-right: 0.6rem;
}
.phone_box span{
	float: left;
}
.phone_box em,.phone_box i{
	float: right;
	margin-right:0.2rem;
}
.staff{
	position: absolute;
	right:0.4rem;
	top:0;
	width:0.6rem;
	height: 100%;
	background: url(../images/staff.png) no-repeat center;
	background-size: 0.59rem;
}
.revise{
	background: url(../images/revise.png) no-repeat center;
	background-size: 0.51rem;
	padding:0.26rem;
}
.order_box{
	padding:0.4rem 0 0.4rem 0.4rem;
}
.order_box dt{
	border-bottom:1px solid #ddd;
	padding-bottom:0.2rem;
	margin-bottom: 0.2rem;
}
.order_box .name>span{
	display: inline-block;
	width:1.07rem;
	height:1.07rem;
	border-radius:999px;
	overflow: hidden;
	vertical-align: middle;
}
.order_box .name>span img{
	width: 100%;
	height: 100%;
}
.order_box dt>p{
	vertical-align: middle;
	display: inline-block;
	font-weight: 600;
}
.price{
	text-align: right;
	overflow: hidden;
	background:url(../images/go.png) no-repeat 8.9rem 0.26rem;
	background-size: 0.32rem 0.43rem;
}
.price a{
	padding:0 0.35rem 0 0.5rem;
	background: url(../images/wallet.png) no-repeat left center;
	background-size: 0.51rem;
	color: #1bb7ac;
}
.order_box dd{
	padding:0.2rem  0.4rem 0.2rem 0; 
}
.order_box dd span{
	float: right;
	color:#999;
}
.submit_box{
	width:10rem;
	height:1.4rem;
	line-height: 1.4rem;
	font-size: 0.5rem;
	background:#1bb7ac ;
	color:#fff;
	text-align: center;
	position: fixed;
	bottom:0;
	left:0;
}