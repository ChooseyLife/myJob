
.main{
	font-size: 0.37rem;
}
.before{
	position: relative;
	padding-left:0.4rem;
	height:1.07rem;
	line-height: 1.07rem;
	background: #fff;
}
.before:before{
	content: "";
	position: absolute;
	left:0.1rem;
	top:50%;
	border:1px solid #1bb7ac;
	display: inline-block;
	width:0.05rem;
	height:0.15rem;
	background: #1bb7ac;
	transform:translateY(-50%);
}
/*头部样式*/
.head2{
	height:1.07rem;
	line-height: 1.07rem;
	text-align: center;
	position: relative;
	border-bottom: 1px solid #ddd;
	font-size:0.35rem;
	background-color:#fff;
	z-index:5;
}
.back2{
	position:absolute;
	display: inline-block;
	left:0;
	top:0;
	width:1.07rem;
	height:1.07rem;
	line-height:1.07rem;
	background: url(../images/back.png) no-repeat center;
	background-size: 0.53rem;
}
.extend{
	position:absolute;
	display: inline-block;
	right:5px;
	top:0;
	width:1.5rem;
	height: 1.07rem;
	line-height: 1.07rem;
}

/*底部菜单*/
