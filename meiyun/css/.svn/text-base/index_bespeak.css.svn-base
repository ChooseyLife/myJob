*{
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}
body{
	background-color: #eee;
}
.main{
	padding-bottom:1.4rem;
}
.bespeak_box .title{
	height:1.07rem;
	line-height: 1.07rem;
	text-align: center;
	border-bottom:1px solid #ddd;
	position: relative;
	background-color: #fff;
}
.bespeak_box .title .more{
	background: url(../images/mor2.png) no-repeat center;
    background-size: 0.64rem;
    width: 1rem;
    height: 1.07rem;
    display: inline-block;
    position: absolute;
    right: 0;
    top: 0;
}
.project_box{
	overflow: hidden;
	padding:0.4rem 0;
}
.project_box li{
    float: left;
    width: 20%;
    text-align: center;
    padding-top:1rem;
    position: relative;
    background-color:rgba(0,0,0,.5);
}
.project_box li.on:after{
    position: absolute;
    bottom: -0.4rem;
    left: 50%;
    margin-left: -0.2rem;
    content: "";
    display: block;
    width: 0;
    height: 0;
    border-color:transparent transparent #fff transparent;
    border-width:0.2rem;
    border-style: solid;

}
.project_box .hairdressing.on{
	background: url(../images/hairdressing.png) no-repeat top center;
	background-size: 0.93rem;
	color:#000;
}
.project_box .cosmetology.on{
	background: url(../images/cosmetology.png) no-repeat top center;
	background-size: 0.93rem;
	color:#000;
}
.project_box .manicure.on{
	background: url(../images/manicure.png) no-repeat top center;
	background-size: 0.93rem;
	color:#000;
}
.project_box .beauty.on{
	background: url(../images/Beauty.png) no-repeat top center;
	background-size: 0.93rem;
	color:#000;
}
.project_box .dressing.on{
	background: url(../images/dressing.png) no-repeat top center;
	background-size: 0.93rem;
	color:#000;
}


