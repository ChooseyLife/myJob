.before{
	color:#999;
}
.bottom_box{
	overflow: hidden;
	position: fixed;
	bottom:0;
	left:0;
	border-top:1px solid #ddd;
	right:0;
	background-color: #fff;
}
.details ul li:not(.title_box){
	padding-left:0.8rem;
	height:1.4rem;
	line-height: 1.4rem;
	
	margin-top:-1px;
	font-size: 0.32rem;
}
.details ul li:nth-last-child(1){
	padding:0;
}
.shop{
	background: url(../images/bespeak/shop.png) no-repeat 0.2rem center;
	background-size: 0.48rem;
	border-bottom:1px solid #ddd;
}
.time_box{
	background: url(../images/bespeak/time.png) no-repeat 0.2rem center;
	background-size: 0.48rem;
	color:#ddd;
}
.place_box{
	background: url(../images/bespeak/place.png) no-repeat 0.2rem center;
	background-size: 0.48rem;
	border:0;
}
.place_box span,.time_box span{
	border-bottom:1px solid #ddd;
}

.details ul li span{
	display: inline-block;
	width: 100%;
	height: 100%;
	background: url(../images/bespeak/go.png) no-repeat 8.5rem center;
	background-size: 0.32rem 0.43rem;
}
.submit{
	margin: 1rem auto 0.27rem;
    width: 80%;
    text-align: center;
    font-size: 0.4rem;
    height: 1.07rem;
    color: #fff;
    line-height: 1.07rem;
    background: #0cc;
    border-radius: 0.1rem;
}
.hairdressing_list{
	display: none;
}
.details{
	background-color: #fff;
	overflow: hidden;
}

.bottom_box li{
	float: left;
	width:25%;
	text-align: center;
	padding-top:0.93rem;
	padding-bottom:0.1rem;
}
.bottom_box li.on{
	color:#0BDBAC;
}