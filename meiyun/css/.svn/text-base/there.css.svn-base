body{
	background: #eee;
}
.main{
	font-size: 0.37rem;
}
.head2{
	background: #fff;
}
.store_box,.operate_box,.traffic_box{
	padding:0.4rem;
	background: #fff;
	margin-bottom:0.2rem;
}
.storename{
	font-size:0.4rem;
	margin-bottom:0.2rem;
	font-weight: 600;
}
.storename a{
	float: right;
	background:url(../images/phone2.png) no-repeat center;
	background-size: 0.64rem;
	width:0.64rem;
	height:0.64rem;
}
.store_explain{
	display: table;

}
.store_explain span:nth-child(1){
	display: table-cell;
	width:1.2rem;
}
.store_explain span:nth-child(2){
	display: table-cell;
}
.title{
	border-bottom:1px solid #ddd;
	font-size:0.4rem;
	padding-bottom:0.1rem;
	font-weight: 600;
	margin-bottom: 0.2rem;
}

.traffic_box p:nth-child(1){
	font-size: 0.4rem;
	border-bottom:1px solid #ddd;
	padding-bottom:0.1rem;
}
.map{
	
	height:5rem;
}
.map img{
	width: 100%;
	height: 100%;
}